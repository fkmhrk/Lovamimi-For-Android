<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingBottom="@dimen/default_margin"
    android:paddingLeft="@dimen/default_margin"
    android:paddingRight="@dimen/default_margin"
    android:paddingTop="@dimen/default_margin"
    tools:context=".CommentActivity" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_rectangle" >

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp" >

            <include layout="@layout/secret_body" />

            <RelativeLayout
                android:id="@+id/comment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/round_blue_rectangle"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp" >

                <LinearLayout
                    android:id="@+id/comment_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:src="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/plus_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="30dp"
                        android:paddingLeft="@dimen/default_padding"
                        android:src="@drawable/heart_plus" />

                    <TextView
                        android:id="@+id/num_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:textColor="@color/clickable_color"
                        android:textSize="@dimen/font_size_small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/secret_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingRight="@dimen/default_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/font_size_extra_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/comment_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/comment_header_container"
                    android:layout_below="@+id/comment_header_container"
                    android:padding="@dimen/default_padding"
                    android:textColor="#ff222222"
                    android:textSize="@dimen/font_size_normal" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>